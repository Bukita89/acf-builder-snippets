{
	// Place your snippets for php here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"addText": {
		"prefix": ["add-text"],
		"body": ["->addText('text_field', [",
					"['label' => '${1:label}',",
					"'instructions' => '${2:instructions}',",
					"'wrapper' => ['width' => '','class' => '','id' => ''],",
					"'prepend' => '${3:URL}',",
					"'append' => ''])"],
		"description": "ACF Builder Text field"
	},

	"addTextarea": {
		"prefix": ["add-textarea"],
		"body": ["->addTextarea('textarea_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}',",
			"'wrapper' => ['width' => '','class' => '','id' => ''],",
			"'maxlength' => '',",
			"'rows' => '${3:2}'])"],
		"description": "ACF Builder Textarea field"
	},

	"addWysiwyg": {
		"prefix": ["add-editor"],
		"body": [" ->addWysiwyg('wysiwyg_field', [",
			"'label' => '${1:label}'",
			"'instructions' => '${2:instructions}',",
			"'wrapper' => ['width' => '','class' => '','id' => ''],",
			"'toolbar' => '${3|full,basic|}',",
			"'media_upload' => ${4|1,0|} ])"],
		"description": "ACF Builder Wysiwyg field"
	},

	"addNumber": {
		"prefix": ["add-number"],
		"body": ["->addNumber('number_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}'])"],
		"description": "ACF Builder Number field"
	},

	"addEmail": {
		"prefix": ["add-email"],
		"body": ["->addEmail('email_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}',",
			"'wrapper' => ['width' => ''],",
			"'default_value' => '',",
			"'placeholder' => ''])"],
		"description": "ACF Builder Email field"
	},

	"addUrl": {
		"prefix": ["add-url"],
		"body": ["->addUrl('url_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}',",
			"'wrapper' => ['width' => '','class' => '','id' => ''],",
			"'placeholder' => ''])"],
		"description": "ACF Builder URL field"
	},

	"addPassword": {
		"prefix": ["add-password"],
		"body": ["->addPassword('password_field', [",
			"'label' => '${1:label}'",
			"'instructions' => '${2:instructions}'",
			"'wrapper' => ['width' => '','class' => '','id' => ''],",
			"'placeholder' => '',",
			"'prepend' => '',",
			"'append' => ''])"],
		"description": "ACF Builder Password field"
	},

	"addImage": {
		"prefix": ["add-image"],
		"body": ["->addImage('image_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}',",
			"'return_format' => 'array',",
			"'preview_size' => '${3|thumbnail,medium,large|}',",
			"'mime_types' => 'png, svg, ico'])"],
		"description": "ACF Builder Image field"
	},

	"addGallery": {
		"prefix": ["add-gallery"],
		"body": ["->addGallery('gallery_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}',",
			"'mime_types' => 'png, svg, ico'])"],
		"description": "ACF Builder Gallery field"
	},

	"addSelect": {
		"prefix": ["add-select"],
		"body": ["->addSelect('select_field', [",
			"'label' => '${1:label}',",
			"'instructions' => '${2:instructions}',",
			"'default_value' => array(),",
			"'allow_null' => ${3|0,1|},",
			"'multiple' => 0,",
			"'ui' => 0,",
			"'ajax' => 0,",
			"'return_format' => 'value',",
			"'placeholder' => ''])"],
		"description": "ACF Builder Choice/Select field"
	},

}